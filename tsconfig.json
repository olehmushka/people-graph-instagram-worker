{
  "compilerOptions": {
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "lib": ["es2019", "dom"],
    "module": "commonjs",
    "target": "es2016",
    "sourceMap": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "allowJs": true,
    "strictNullChecks": true,
    "types": [ "jest", "node" ],
    "resolveJsonModule": true,
    "importHelpers": false,
    "declaration": true,
    "strict": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    "typeRoots": [
        "node_modules/@types"
    ]
  },
  "include": [
    "scripts/**/*",
    "src/**/*",
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
    "integration"
  ]
}
